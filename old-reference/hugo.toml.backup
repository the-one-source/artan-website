# =========================================
# ARTAN Website – Hermit Theme Config
# Fully aligned, multilingual, functional, advanced
# =========================================

baseURL = "https://artan.live/"
title = "ARTAN"
theme = "hermit"
defaultContentLanguage = "en"
enableRobotsTXT = true
canonifyURLs = true
googleAnalytics = ""

# Build options
buildDrafts = false
buildFuture = false
buildExpired = false
enableGitInfo = false
enableEmoji = true

# Directories
archetypeDir = "archetypes"
contentDir = "content"
dataDir = "data"
layoutDir = "layouts"
publishDir = "public"

# Code highlighting
pygmentsCodeFences = true
pygmentsStyle = "monokai"

# Permalinks
[permalinks]
posts = "/posts/:year/:month/:title/"

# Taxonomies
[taxonomies]
tag = "tags"
category = "categories"
series = "series"

# Pagination
[pagination]
pagerSize = 20

# =========================================
# Global params
# =========================================
[params]
description = "ARTAN — Music, Books, Projects, Art & Consciousness"
enableGlobalLanguageMenu = true
showReadingTime = true
disableReadOtherPosts = false
justifyContent = false
relatedPosts = false
code_copy_button = true
dateform = "2006-01-02"
dateformShort = "Jan 2, 2025"
dateformNumTime = "2006-01-02 15:04"
disqusShortname = "artandavoodi"

[params.author]
name = "ARTAN"

[params.footer]
copyright = true
topText = []
bottomText = ["Made with &#10084; by ARTAN"]

[[params.social]]
name = "twitter"
url = "https://twitter.com/"

[[params.social]]
name = "instagram"
url = "https://instagram.com/"

[[params.social]]
name = "youtube"
url = "https://youtube.com/"

[[params.social]]
name = "github"
url = "https://github.com/"

[[params.social]]
name = "linkedin"
url = "https://www.linkedin.com/"

[[params.social]]
name = "email"
url = "mailto:you@artan.live"

